<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="io.anyway.galaxy.console.dal.rdao.TransactionInfoDao" >

  <resultMap type="io.anyway.galaxy.console.dal.dto.TransactionInfoDto" id="transactionInfoDto">
    <id column="tx_id" property="txId" />
    <result column="parent_id" property="parentId" />
    <result column="business_id" property="businessId" />
    <result column="business_type" property="businessType" />
    <result column="tx_type" property="txType" />
    <result column="tx_status" property="txStatus" />
    <result column="context" property="context" />
    <result column="payload" property="payload" />
    <result column="retried_count" property="retriedCount" />
    <result column="gmt_create" property="gmtCreate" />
    <result column="gmt_modified" property="gmtModified" />
  </resultMap>

  <select id="list" parameterType="io.anyway.galaxy.console.dal.dto.TransactionInfoDto" resultType="io.anyway.galaxy.console.dal.dto.TransactionInfoDto">
    select tx_id, parent_id, business_id, business_type, tx_type, tx_status, context, payload, retried_count, gmt_create, gmt_modified
    from transaction_info
  </select>

  <select id="get" parameterType="long" resultType="io.anyway.galaxy.console.dal.dto.TransactionInfoDto">
    select tx_id, parent_id, business_id, business_type, tx_type, tx_status, context, payload, retried_count, gmt_create, gmt_modified
    from transaction_info ti
    where tx_id = #{txId}
  </select>

</mapper>